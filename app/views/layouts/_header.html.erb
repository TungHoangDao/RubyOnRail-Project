<%# if logged_in? %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "News+", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>



<!--        Show the dropdown menu of all category-->


        <li class="dropdown dropCustom">
          <a href="#" class="dropdown-toggle dropCustom" data-toggle="dropdown">
            News <b class="caret"></b>
          </a>
          <% categories = Category.all %>
          <ul class="dropdown-menu dropCustom">
            <% categories.each do |category| %>
              <li> <%= link_to category.name, @current_user, class: "_link" %></li>
            <% end %>
          </ul>
        </li>




<!--        If the user has logged in, show uer's avatar or show default avatar.-->


        <% if logged_in? %>
          <li><%= link_to @current_user.name, @current_user %></li>
          <%= link_to image_tag(@current_user.avatar, alt: @current_user.name, class: "avatar"), logout_path, method: :delete %>
        <% else %>
          <%= link_to image_tag("avatar.png", class: "avatar"), login_path %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<%# end %>